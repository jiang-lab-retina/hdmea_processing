{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "checkpointMessage",
      "type": "promptString",
      "description": "Checkpoint message (e.g. 'before refactoring models')",
      "default": "pre-ai-edit"
    },
    {
      "id": "checkpointId",
      "type": "promptString",
      "description": "Checkpoint timestamp/id to restore (leave empty for most recent). Run 'List Checkpoints' to see available.",
      "default": ""
    }
  ],
  "tasks": [
    {
      "label": "Cursor AI: Checkpoint",
      "detail": "Save current state (Ctrl+Shift+B). Supports multiple stacked checkpoints.",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\\\scripts\\\\cursor_ai_checkpoint.ps1",
        "-Message",
        "${input:checkpointMessage}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Cursor AI: Restore (most recent)",
      "detail": "Undo all agent edits since the last checkpoint.",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\\\scripts\\\\cursor_ai_restore.ps1"
      ],
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Cursor AI: Restore (pick checkpoint)",
      "detail": "Restore to a specific checkpoint by timestamp/id.",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\\\scripts\\\\cursor_ai_restore.ps1",
        "-Id",
        "${input:checkpointId}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Cursor AI: List Checkpoints",
      "detail": "Show all saved checkpoints with timestamps and messages.",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\\\scripts\\\\cursor_ai_restore.ps1",
        "-List"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
